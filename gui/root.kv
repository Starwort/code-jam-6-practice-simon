#:kivy 1.11.1


<StartScreen>:
    name: "start"

    BoxLayout:
        orientation: "vertical"

        Label:
            text: "Simon Clone"
            font_size: sp(48)

        BoxLayout:
            orientation: "vertical"
            size_hint: 0.7, 0.3
            padding: dp(10)
            spacing: dp(48)
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            StartButton:
                text: "Start"
                on_press: app.screenmanager.current = "game"
            StartButton:
                text: "Exit"
                on_press: quit()


<GameScreen>:
    name: "game"
    BoxLayout:
        orientation: "vertical"
        padding: dp(12)
        spacing: dp(12)
        GridLayout:
            cols: 2
            spacing: dp(6)
            SimonButton:
                id: top_left
                background_color: 212/255, 170/255, 0, 1
                angle: -90, 0
            SimonButton:
                id: top_right
                background_color: 0, 67/255, 171/255, 1
                angle: 0, 90
            SimonButton:
                id: bottom_left
                background_color: 170/255, 0, 0, 1
                angle: 180, 270
            SimonButton:
                id: bottom_right
                background_color: 68/255, 170/255, 0, 1
                angle: 90, 180
        StartButton:
            text: "Back"
            on_press: app.screenmanager.current = "start"


<SimonButton>:
    canvas:
        Color:
            rgba: [x / 2 for x in self.background_color]
        Rectangle:
            size: self.size
            pos: self.pos
        Color:
            rgba: self.background_color
        Line:
            width: 35
            cap: "none"
            circle: self.parent.center_x, self.parent.center_y, self.radius , self.start_angle, self.end_angle


<StartButton@Button>:
    size_hint_y: None
    height: dp(48)